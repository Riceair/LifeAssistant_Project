<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menu_activity.NewPlan_activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/new_stuff_background"
            tools:context=".MainActivity">

            <ImageView
                android:id="@+id/frame6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="550dp"
                app:srcCompat="@drawable/digits_0" />

            <ImageView
                android:id="@+id/frame4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="450dp"
                app:srcCompat="@drawable/digits_0" />

            <ImageView
                android:id="@+id/frame3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="350dp"
                app:srcCompat="@drawable/digits_0" />

            <ImageView
                android:id="@+id/frame2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="230dp"
                app:srcCompat="@drawable/digits_0" />

            <ImageView
                android:id="@+id/frame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="160dp"
                app:srcCompat="@drawable/digits_0" />

            <Spinner
                android:id="@+id/type"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="555dp" />

            <Button
                android:id="@+id/savebutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="300dp"
                android:layout_marginTop="75dp"
                android:text="儲存" />

            <Button
                android:id="@+id/cancelbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="300dp"
                android:layout_marginTop="30dp"
                android:text="取消" />

            <TextView
                android:id="@+id/titletext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="35dp"
                android:text="新"
                android:textColor="@android:color/holo_red_dark"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="75dp" />

            <TextView
                android:id="@+id/titletext2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="95dp"
                android:layout_marginTop="75dp"
                android:text="增事項"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="36sp" />

            <ImageView
                android:id="@+id/weathercondition"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="30dp"
                app:srcCompat="@drawable/weather_bg_clear" />

            <ImageView
                android:id="@+id/mindecimal2"
                android:layout_width="30dp"
                android:layout_height="60dp"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="320dp"
                app:srcCompat="@drawable/digits_1" />

            <ImageView
                android:id="@+id/mindigit2"
                android:layout_width="30dp"
                android:layout_height="60dp"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="320dp"
                app:srcCompat="@drawable/digits_9" />

            <ImageView
                android:id="@+id/secdecimal"
                android:layout_width="30dp"
                android:layout_height="60dp"
                android:layout_marginLeft="220dp"
                android:layout_marginTop="320dp"
                app:srcCompat="@drawable/digits_2" />

            <ImageView
                android:id="@+id/secdigit"
                android:layout_width="30dp"
                android:layout_height="60dp"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="320dp"
                app:srcCompat="@drawable/digits_9" />

            <TextView
                android:id="@+id/month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="190dp"
                android:text="四"
                android:textSize="55dp" />

            <TextView
                android:id="@+id/month2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="190dp"
                android:text="29"
                android:textSize="55dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/descriptionevent"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="75dp"
                android:layout_marginTop="650dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="輸入描述" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/eventinput"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="430dp"
                android:hint="按此新增">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="hint" />

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/settime"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="300dp"
                android:layout_marginTop="330dp"
                android:text="SET" />

        </RelativeLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>