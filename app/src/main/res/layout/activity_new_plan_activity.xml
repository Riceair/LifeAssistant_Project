<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/planner_background">

    <RelativeLayout
        android:layout_width="380dp"
        android:layout_height="500dp"
        android:layout_centerInParent="true"
        android:background="@drawable/new_stuff_background">

        <TextView
            android:id="@+id/event"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="事件標題"
            android:textColor="@color/design_default_color_background"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/eventinput"
            android:layout_width="200dp"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/event"
            android:hint="請輸入金額"
            android:inputType="textUri"
            android:textColor="@color/design_default_color_background"
            android:textColorHint="@color/colorAccent" />

        <TextView
            android:id="@+id/date"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_below="@+id/event"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="日期"
            android:textColor="@color/design_default_color_background"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/dateinput"
            android:layout_width="200dp"
            android:layout_height="55dp"
            android:layout_below="@+id/eventinput"
            android:layout_toRightOf="@+id/date"
            android:focusable="false"
            android:hint="請選擇日期"
            android:textColor="@color/design_default_color_background"
            android:textColorHint="@color/colorAccent" />

        <Button
            android:id="@+id/datepicker"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignBottom="@+id/dateinput"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="368dp"
            android:layout_marginRight="20dp"
            android:text="選擇日期"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/time"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_below="@+id/date"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="開始時間"
            android:textColor="@color/design_default_color_background"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/timeinput"
            android:layout_width="200dp"
            android:layout_height="55dp"
            android:layout_below="@+id/dateinput"
            android:layout_toRightOf="@+id/time"
            android:focusable="false"
            android:hint="請選擇時間"
            android:inputType="time"
            android:textColor="@color/design_default_color_background"
            android:textColorHint="@color/colorAccent" />

        <Button
            android:id="@+id/timepicker"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignBottom="@+id/timeinput"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="368dp"
            android:layout_marginRight="20dp"
            android:onClick="clickToReadFDB"
            android:text="選擇時間"
            android:textSize="15dp" />


        <TextView
            android:id="@+id/textView5"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:gravity="center"
            android:text="結束日期"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/description"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_below="@id/time"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="描述"
            android:textColor="@color/cardview_light_background"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/descriptioninput"
            android:layout_width="200dp"
            android:layout_height="250dp"
            android:layout_below="@id/timeinput"
            android:layout_toRightOf="@id/description"
            android:hint="請輸入詳細資訊"
            android:textColor="@color/design_default_color_background"
            android:textColorHint="@color/colorAccent" />

        <Button
            android:id="@+id/savebutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/descriptioninput"
            android:layout_toLeftOf="@+id/cancelbutton"
            android:onClick="clickToUpdate"
            android:text="Save" />

        <Button
            android:id="@+id/cancelbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/descriptioninput"
            android:layout_alignRight="@id/descriptioninput"
            android:text="Cancel"
            android:textSize="15dp" />


    </RelativeLayout>
    <include
        layout="@layout/drawer_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>