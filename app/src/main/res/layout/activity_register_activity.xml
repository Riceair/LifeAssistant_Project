<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    tools:context=".menu_activity.login.Register_activity">

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="550dp"
        android:layout_centerInParent="true"
        android:background="@drawable/regsite_inner_background">


        <ImageView
            android:id="@+id/reg_logo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:scaleType="fitXY"
            android:src="@drawable/regsite_logo" />

        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/reg_logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="輸入註冊資訊以繼續"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/account_text"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_below="@+id/welcomeText"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="帳號"
            android:textSize="14dp" />


        <ImageView
            android:id="@+id/account_inputbox"
            android:layout_width="210dp"
            android:layout_height="45dp"
            android:layout_alignTop="@+id/account_text"
            android:layout_toRightOf="@+id/account_text"
            android:scaleType="fitXY"
            android:src="@drawable/fillin_frame" />

        <EditText
            android:id="@+id/account_input"
            android:layout_width="190dp"
            android:layout_height="45dp"
            android:layout_alignLeft="@+id/account_inputbox"
            android:layout_alignTop="@+id/account_inputbox"
            android:layout_marginLeft="10dp"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:hint="請輸入帳號"
            android:inputType="textEmailAddress"
            android:maxLength="20"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/account_hint"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_below="@+id/account_inputbox"
            android:layout_alignLeft="@+id/account_inputbox"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text="限制:長度6至20之英數混雜"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/pw_text"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_below="@id/account_text"
            android:layout_alignLeft="@+id/account_text"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="密碼"
            android:textSize="14dp" />

        <ImageView
            android:id="@+id/pw_inputbox"
            android:layout_width="210dp"
            android:layout_height="45dp"
            android:layout_alignTop="@+id/pw_text"
            android:layout_toRightOf="@+id/pw_text"
            android:scaleType="fitXY"
            android:src="@drawable/fillin_frame" />

        <EditText
            android:id="@+id/pw_input"
            android:layout_width="190dp"
            android:layout_height="45dp"
            android:layout_alignLeft="@+id/pw_inputbox"
            android:layout_alignTop="@+id/pw_inputbox"
            android:layout_marginLeft="10dp"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:hint="請輸入密碼"
            android:inputType="textPassword"
            android:maxLength="20"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/pw_hint"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_below="@+id/pw_inputbox"
            android:layout_alignLeft="@+id/pw_inputbox"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text="限制:長度6至20之英數混雜"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/pw_check_text"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_below="@+id/pw_text"
            android:layout_alignLeft="@+id/pw_text"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="確認\n密碼"
            android:textSize="14dp" />

        <ImageView
            android:id="@+id/pw_check_inputbox"
            android:layout_width="210dp"
            android:layout_height="45dp"
            android:layout_alignTop="@+id/pw_check_text"
            android:layout_toRightOf="@+id/pw_check_text"
            android:scaleType="fitXY"
            android:src="@drawable/fillin_frame" />

        <EditText
            android:id="@+id/pw_check_input"
            android:layout_width="190dp"
            android:layout_height="45dp"
            android:layout_alignLeft="@+id/pw_check_inputbox"
            android:layout_alignTop="@+id/pw_check_inputbox"
            android:layout_marginLeft="10dp"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:hint="請再次輸入密碼"
            android:inputType="textPassword"
            android:maxLength="20"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/pw_check_hint"
            android:layout_width="160dp"
            android:layout_height="30dp"
            android:layout_below="@+id/pw_check_inputbox"
            android:layout_alignLeft="@+id/pw_check_inputbox"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text="請輸入相同的密碼"
            android:textColor="#FF0000"
            android:textSize="16dp"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/continuebutton"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_below="@+id/pw_check_hint"
            android:layout_centerHorizontal="true"
            android:onClick="clickToRegister"
            android:src="@drawable/arrowbutton" />

    </RelativeLayout>

    <include
        layout="@layout/drawer_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>