<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bookkeeping_background"
    tools:context=".menu_activity.login.register_activity">

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="600dp"
        android:layout_centerInParent="true"
        android:background="@drawable/regsite_inner_background">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:scaleType="fitXY"
            android:src="@drawable/welcome_logo"
            app:srcCompat="@drawable/regsite_logo" />

        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="您好！歡迎加入\n我將成為你貼心的生活助理"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/welcomeText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/welcomeText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="輸入註冊資訊以繼續"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/welcomeText3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/welcomeText2"
            android:layout_centerHorizontal="true"
            android:text="帳號"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/welcomeText4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_inputbox"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="密碼"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/id_inputbox"
            android:layout_width="300dp"
            android:layout_height="65dp"
            android:layout_below="@id/welcomeText3"
            android:layout_alignParentBottom="false"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            android:src="@drawable/fillin_frame" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/id_input"
            android:layout_width="270dp"
            android:layout_height="60dp"
            android:layout_below="@id/welcomeText3"
            android:layout_centerHorizontal="true"
            android:hint="請輸入帳號" />

        <ImageView
            android:id="@+id/pw_inputbox"
            android:layout_width="300dp"
            android:layout_height="65dp"
            android:layout_below="@id/welcomeText4"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            android:src="@drawable/fillin_frame" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/pw_input"
            android:layout_width="270dp"
            android:layout_height="60dp"
            android:layout_below="@id/welcomeText4"
            android:layout_centerHorizontal="true"
            android:hint="請輸入密碼" />

        <ImageView
            android:id="@+id/continuebutton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:scaleType="fitXY"
            android:src="@drawable/arrowbutton" />

    </RelativeLayout>

    <include
        layout="@layout/drawer_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>